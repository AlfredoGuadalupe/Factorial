#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

long fact(int n);
int main() {
	int b;
	printf("Ingresa un numero\n");
	scanf("%d",&b);
	printf("El factorial es %ld\n", fact(b));
	return 0;
}
long fact(int n){
    if(n==0)
        return 1;
    else
        return fact(n-1)*n;
}
